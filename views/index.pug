extends layout

block content
    h1= title
    p Welcome to #{title}

    form(action="/reply" method="POST")
        fieldset
            legend="Your Contact Info"
            label(for="name")="Name"
            input(type="text", name="name" required)
            br
            label(for="email")="Email"
            input(type="email", name="email" required)
            br
            span Attending:
            input(type="radio" id="yes" name="attending" value="yes")
            label(for="yes") "I'll be there!"
            input(type="radio" id="no" name="attending" value="no")
            label(for="no") "I can't make it"
            br
            label(for="guests") Number of guests:
            select(id="guests" name="cars")
                option(value="1") 1
                option(value="2") 2
                option(value="3") 3
                option(value="4") 4
                option(value="5") 5
                option(value="6") 6
                option(value="7") 7
                option(value="8") 8
            br
            input(type="submit" value="Submit")

            br
            br
            a(href="/guests") Go to guest list